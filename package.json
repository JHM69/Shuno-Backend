{
  "name": "shuno-backend",
  "version": "1.0.0",
  "description": "Shuno is a all an one audio streaming platform for musics, podcasts, audiobooks, poem resiting or any kind of audio.  ",
  "main": "index.js",
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "ts-node-dev --respawn --pretty --transpile-only src/index.ts dev -p 5000",
    "start": "node dist/src/index.js",
    "prisma:migrate": "prisma migrate dev --skip-seed",
    "prisma:format": "prisma format",
    "prisma:generate": "prisma generate",
    "prisma:generate:watch": "prisma generate --watch",
    "prisma:seed": "prisma db seed --preview-feature",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "prettier:write": "npx prettier --write .",
    "prettier:check": "npx prettier --check .",
    "lint:check": "npx eslint src/**/*.ts",
    "lint:fix": "npx eslint --fix src/**/*.ts"
  },
  "keywords": [
    "music",
    "audio",
    "spotify" 
  ],
  "author": {
    "name": "Jahangir",
    "email": "jahangirhossainm69@gmail.com"
  },
  "dependencies": {
    "@prisma/client": "^5.6.0", 
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-jwt": "^6.1.0",
    "jsonwebtoken": "^8.5.1",
    "slugify": "^1.6.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^15.14.9",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "lint-staged": "^11.1.2",
    "prettier": "2.4.0",
    "prisma": "^5.6.0",
    "prisma-dbml-generator": "^0.10.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.2"
  },
  "lint-staged": {
    "*.ts": [
      "npm run prisma:format",
      "npm run lint:fix",
      "npm run prettier:write"
    ]
  }
}
